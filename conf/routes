# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
POST    /boards                     controllers.Application.createBoard()
GET     /boards/:id                 controllers.Application.getBoard(id: String)
GET     /roll/:id                   controllers.Application.roll(id: String)
GET     /banandamonium/:playerCount controllers.Application.index(playerCount: Int)
GET     /healthcheck                controllers.Application.healthcheck
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
